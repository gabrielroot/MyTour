<div id="audit-extra-filters" class="container-fluid">
    <fieldset
            class="form-group border p-2 pb-4 row d-flex justify-content-center"
            style="background: linear-gradient(to bottom, #f5f5f5, #ffffff);"
    >
        <legend class="fs-5">Auditoria:</legend>
        <div class="row">
            <div class="col-sm-6 col-md-4">
                {{ form_label(form.createdBy) }}
                <i class="mdi mdi-account"></i>
                {{ form_widget(form.createdBy) }}
            </div>
            <div class="col-sm-6 col-md-4">
                {{ form_label(form.updatedBy) }}
                <i class="mdi mdi-account"></i>
                {{ form_widget(form.updatedBy) }}
            </div>
            <div class="col-sm-6 col-md-4">
                {{ form_label(form.deletedBy) }}
                <i class="mdi mdi-account"></i>
                {{ form_widget(form.deletedBy) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-6 col-md-3">
                {{ form_label(form.createdAtStart) }}
                <i class="mdi mdi-calendar-clock"></i>
                {{ form_widget(form.createdAtStart) }}
            </div>
            <div class="col-sm-6 col-md-3">
                {{ form_label(form.createdAtEnd) }}
                <i class="mdi mdi-calendar-check"></i>
                {{ form_widget(form.createdAtEnd) }}
            </div>
            <div class="col-sm-6 col-md-3">
                {{ form_label(form.updatedAtStart) }}
                <i class="mdi mdi-calendar-clock"></i>
                {{ form_widget(form.updatedAtStart) }}
            </div>
            <div class="col-sm-6 col-md-3">
                {{ form_label(form.updatedAtEnd) }}
                <i class="mdi mdi-calendar-check"></i>
                {{ form_widget(form.updatedAtEnd) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-6 col-md-3">
                {{ form_label(form.deletedAtStart) }}
                <i class="mdi mdi-calendar-clock"></i>
                {{ form_widget(form.deletedAtStart) }}
            </div>
            <div class="col-sm-6 col-md-3">
                {{ form_label(form.deletedAtEnd) }}
                <i class="mdi mdi-calendar-check"></i>
                {{ form_widget(form.deletedAtEnd) }}
            </div>
        </div>
    </fieldset>
</div>