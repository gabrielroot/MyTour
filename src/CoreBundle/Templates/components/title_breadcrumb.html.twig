<div class="page-header container-fluid">
    <h3 class="page-title">{{ title }}</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {% for link in links %}
                <li class="breadcrumb-item">
                    {% if link.path %}
                        <a
                            href="{{ link.path }}"
                        >
                            {{ link.name }}
                        </a>
                    {% else %}
                        {{ link.name }}
                    {% endif %}
                </li>
            {% endfor %}
            <li class="breadcrumb-item active" aria-current="page">{{ current_name }}</li>
        </ol>
    </nav>
</div>