server {
    listen 80;
    server_name _;
    root /var/www/symfony/public;

    index index.php;

    location / {
        try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index\.php(/|$) {
        fastcgi_pass app:9000;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi.conf;
    }

    location ~ \.php$ {
        return 404;
    }
}
